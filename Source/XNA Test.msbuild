<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<ItemGroup>
		<BinaryDirectory Include="$(BUILD_DIR)\Bin\$(BuildPlatform)\" />
		<SolutionFile Include="XNA Test.sln"/>
	</ItemGroup>
	
	<PropertyGroup>
		<Configuration Condition=" '$(Configuration)' == '' ">Release</Configuration>
		<BuildPlatform Condition=" '$(BulidPlatform)' == '' ">Xbox 360</BuildPlatform>
	</PropertyGroup>

	<Target Name="Compile" DependsOnTargets="Init">
		<MSBuild Projects="@(SolutionFile)" Targets="Rebuild"
			Properties="OutDir=%(BinaryDirectory.FullPath);
			Configuration=$(Configuration);
			Platform=$(BuildPlatform)"/>
	</Target>

	<Target Name="Init" DependsOnTargets="Clean">
		<MakeDir Directories="@(BinaryDirectory)"/>
	</Target>

	<Target Name="Clean">
		<RemoveDir Directories="@(BinaryDirectory)"/>
	</Target>
</Project>

